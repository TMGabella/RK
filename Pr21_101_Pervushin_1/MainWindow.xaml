<Window x:Class="Pr21_101_Pervushin_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pervushin_v1" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="NumberTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Center" TextChanged="NumberTextBox_TextChanged"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="1" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>